.item-wrapper {
    width: 100%;
    overflow: hidden;
    position: relative;
}

.item-wrapper .item_list {
    line-height: 128rpx;
    position: relative;
    width: 100%;
    box-sizing: border-box;
    background: #fff;
    z-index: 999;
    display: block;
}

.movable-view{
  width: 100%;
